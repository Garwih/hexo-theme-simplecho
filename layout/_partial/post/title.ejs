<% if (post.link){ %>
  <h1 class="post-title">
    <a href="<%- url_for(post.link) %>"><%= post.title %><span class="icon-link"></span></a>
  </h1>
<% } else if (post.title){ %>
  <% if (index){ %>
    <h1 class="post-title">
      <a href="<%- url_for(post.path) %>"><%= post.title %></a>
    </h1>
  <% } else { %>
    <h1 class="post-title"><%= post.title %></h1>
  <% } %>
<% } else { %>
  <% if (index){ %>
  <h1 class="post-title">
    <a href="<%- url_for(post.path) %>"><time datetime="<%= date_xml(post.date) %>"><%= date(post.date, 'YYYY-MM-DD') %></time></a>
  </h1>
  <% } else { %>
    <h1 class="post-title"><time datetime="<%= date_xml(post.date) %>"><%= date(post.date, 'YYYY-MM-DD') %></time></h1>
  <% } %>
<% } %>